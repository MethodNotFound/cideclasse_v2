<main class=" h-dvh p-10 bg-gradient">

<div class="mx-auto md:w-2/3 w-full">
  <% if @errors&.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <ul>
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with url: session_create_password_path do |form| %>
    <div class="flex flex-col bg-gray h-80 pl-10 ml-24 pl-1.5  my-28 rounded-2xl shadow-2xl shadow-violet-300">
      <h1 class="font-bold text-4xl text-white text-center p-7">Registro de nova Senha</h1>
      <!--font-bold text-4xl text-gray text-center p-7-->
    <section class="flex flex-col gap-y-3 ">
    <img class="flex " src="/menino.png"/>
      <%= form.label :password, "Nova Senha"%>
      <%= form.text_field :password, class: "block bg-gray shadow  w-80 rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", value: @attrs[:password] %>
    <section class="inline">
      <%= form.submit class: " flex rounded-lg py-3 px-5 bg-purple text-white inline-block font-medium cursor-pointer self-center" %>
    </section>
  <% end %>
</div>
</main>

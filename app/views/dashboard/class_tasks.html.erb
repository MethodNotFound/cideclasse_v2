<h1 class="text-3xl font-bold text-center mb-8"><%= @klass.identifier %> tarefas</h1>
<h1 class="text-3xl font-bold text-center mb-8">Para fazer</h1>
<% @klass.tasks.each do |task| %>
  <%= link_to show_task_student_path(task_id: task.id) do %>
    <%= task.title %>
  <% end %>
<% end %>
<h1 class="text-3xl font-bold text-center mb-8">Completas</h1>

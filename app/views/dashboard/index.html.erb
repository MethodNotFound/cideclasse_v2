<!-- Page Wrapper -->
<div class="max-w-7xl mx-auto p-6">
  <!-- Title -->
  <h1 class="text-3xl font-bold text-center mb-8">Turmas e Tarefas</h1>

  <!-- Classes Section -->
  <div class="shadow-md rounded-lg p-6">
    <!-- Title for Classes List -->
    <h2 class="text-2xl font-semibold mb-4">Suas turmas</h2>

    <!-- List of Classes -->
    <ul class="space-y-4">

      <% @classes.each_with_index do |klass, i| %>

        <!-- Class 1 -->
          <li class="border rounded-lg p-4">
            <%= link_to dashboard_class_tasks_path(id: klass.id) do %>
              <h3 class="text-xl font-semibold hover:text-blue-300">Turma <%= i+1 %>: <%= klass.identifier %></h3>
            <% end %>
            <p class="text-gray-300">Tarefas para essa turma:</p>

            <!-- List of Tasks for Class 1 -->
            <ul class="pl-4 list-disc text-gray-300">
              <% klass.tasks.each do |task| %>
                <li><%= task.title %></li>
              <% end %>

            </ul>
          </li>
        <div>

        <% end %>
    </ul>
        </div>
  </div>

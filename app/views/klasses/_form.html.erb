<%= form_with(model: klass, class: "contents") do |form| %>
  <% if klass.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(klass.errors.count, "error") %> prohibited this klass from being saved:</h2>

      <ul>
        <% klass.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :identifier, "Identificador" %>
    <%= form.text_field :identifier, class: "block rounded border border-base-100 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit "#{klass.persisted? ? "Editar" : "Criar" } Turma", class: "btn btn-primary" %>
  </div>
<% end %>

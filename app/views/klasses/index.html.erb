<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Klasses" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Klasses</h1>
    <%= link_to "New klass", new_klass_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="klasses" class="min-w-full border border-1 border-white">
    <% @klasses.each do |klass| %>
      <%= render klass %>
      <p>
        <%= link_to "Mostrar Classe", klass, class: "btn btn-secondary" %>
        <%= link_to "Editar Alunos", edit_students_klass_path(id: klass.id), class: "btn btn-secondary" %>
        <%= link_to "Editar Tarefas", edit_tasks_klass_path(id: klass.id), class: "btn btn-secondary" %>
      </p>
    <% end %>
  </div>
</div>

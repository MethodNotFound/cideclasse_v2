<div class="w-full p-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Turmas" %>

  <h1 class="font-bold text-4xl text-center mt-5 mb-5">Turmas</h1>

  <div id="klasses" class="min-w-full">
    <% @klasses.each do |klass| %>
      <div class="flex mb-5 justify-between items-center py-2 px-3 border border-base-100 rounded">
        <span><%= klass.identifier %></span>
        <div class="flex">
          <%= link_to "Mostrar", klass, class: "btn btn-secondary mr-2" %>
          <%= link_to "Editar Alunos", edit_students_klass_path(id: klass.id), class: "btn btn-secondary mr-2" %>
          <%= link_to "Editar Tarefas", edit_tasks_klass_path(id: klass.id), class: "btn btn-secondary" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "Nova Turma", new_klass_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block w-fit float-right font-medium" %>
</div>

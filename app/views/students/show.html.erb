<div class="mx-auto w-4/5">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @student %>

    <div class="flex">
      <%= link_to "Editar", edit_student_path(@student), class: "btn btn-outline btn-primary" %>
      <%= link_to "Voltar", students_path, class: "ml-1 btn btn-outline btn-primary" %>
      <div class="block ml-auto">
        <%= button_to "Deletar", @student, method: :delete, class: "btn btn-outline btn-error" %>
      </div>
    </div>

    <h1 class="text-2xl font-bold text-center">Entregas</h1>

    <% @student.submissions.where(passed: true).each do |submission| %>
      <%= submission.task.title %>
      <pre class="border border-primary"><%= submission.code %></pre>
      <br>
      <br>
    <% end %>

  </div>
</div>

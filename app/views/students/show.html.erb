<div class="mx-auto h-dvh bg-gradient  w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @student %>

    <%= link_to "Edit this student", edit_student_path(@student), class: "mt-2 rounded-lg py-3 px-5 bg-purple inline-block font-medium" %>
    <%= link_to "Back to students", students_path, class: "ml-2 rounded-lg py-3 px-5 bg-purple inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this student", @student, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-purple font-medium" %>
    </div>
  </div>
</div>

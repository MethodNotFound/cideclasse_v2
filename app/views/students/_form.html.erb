<%= form_with(model: student, class: "contents") do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
        <% student.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :identifier, "Identificador" %>
    <%= form.text_field :identifier, class: "block rounded border border-base-100 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :name, "Nome"%>
    <%= form.text_field :name, class: "block rounded border border-base-100 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, class: "block rounded border border-base-100 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <% if student.id.present? %>
    <div class="my-5">
      <%= form.label :ask_new_password, "Resetar Senha" %>
      <%= form.check_box :ask_new_password, class: "block mt-2 h-5 w-5" %>
    </div>
  <% end %>


  <div class="inline">
    <%= form.submit "#{student.persisted? ? "Editar" : "Criar" } aluno", class: "btn btn-primary" %>
  </div>
<% end %>
